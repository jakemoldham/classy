

<%# provide(:title, 'Sign up') %>
<!--<h1>Sign up</h1>-->

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
      
      <%= f.label :category %>
      <%= f.select :category, options_for_select(%w(Auto Homes Animals Funs Misc)), class: 'form-control' %>
      <br>
      <%= f.button :submit , class: "btn btn-primary submit_index" %>
    <% end %>
  </div>
</div>

